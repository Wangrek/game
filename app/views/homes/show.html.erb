<div class="container">
	<div class="mt-3 text-center"> 
		<h2 id="notice">Images upload successful!</h2>
	</div>	
	<div> 
		<p>
			<% if @home.images.attached? %>
				<% @home.images.each do |img| %>
				  <image src="<%=(url_for(img))%>" width="100" height="100">
				<% end %>
			<% end %>
		</p>
	</div>
	<div class="pull-right">
		<%= link_to "Play", plays_path, :class=> "btn btn-success" %>
	</div>
</div>